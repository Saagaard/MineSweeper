<Window x:Class="MineSweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineSweeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500">
    <Window.Resources>
        <Style TargetType="Button" x:Key="buttonPressed">
            <Setter Property="Background" Value="DeepSkyBlue"/>
        </Style>
        <Style TargetType="Button" x:Key="minePressed">
            <Setter Property="Background" Value="Red"/>
        </Style>
    </Window.Resources>
    <Grid x:Name="fieldGrid" Margin="0,90,0,-6">
        <Grid ShowGridLines="True"/>
        <TextBox x:Name="textGameOver" Panel.ZIndex="4" Visibility="Hidden" IsReadOnly="True" Grid.Column="1" Grid.ColumnSpan="8" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text="YOU LOSE" VerticalAlignment="Top" Width="350" Height="73" FontSize="48" FontWeight="Bold" Background="#FFEA3333" Padding="50,3,8,3" Margin="0,48,0,0" Grid.RowSpan="3" BorderBrush="Black" BorderThickness="3,3,3,3"/>
        <TextBox x:Name="textWon" Panel.ZIndex="4" Visibility="Hidden" IsReadOnly="True" Grid.Column="1" Grid.ColumnSpan="8" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text="YOU WIN" VerticalAlignment="Top" Width="350" Height="73" FontSize="48" FontWeight="Bold" Background="#FF33A3EA" Padding="50,3,8,3" Margin="0,48,0,0" Grid.RowSpan="3" Foreground="White" BorderBrush="Black" BorderThickness="3,3,3,3"/>
        <TextBox x:Name="textMines" Grid.ColumnSpan="6" HorizontalAlignment="Left" Margin="25,-67,0,0" IsReadOnly="True" TextWrapping="Wrap" Text="Number of mines: " VerticalAlignment="Top" Width="242" Height="38"  FontSize="22" BorderBrush="White" BorderThickness="0,0,0,1"/>
        <Label x:Name="gameTimer" Grid.Column="7" Content="Time: 00:00:00" HorizontalAlignment="Left" Margin="14,-67,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="45" Width="129" FontSize="16"/>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

    </Grid>
</Window>
